{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "es5",
    "sourceMap": true,
    "target": "es5",
    "types": ["jasmine"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
